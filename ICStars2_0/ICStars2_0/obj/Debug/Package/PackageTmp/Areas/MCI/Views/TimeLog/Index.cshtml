@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head
{
@Styles.Render("~/bundles/Site","~/bundles/mci")
    <style type="text/css">
        body form {
            padding-top: 60px;
            width: 550px;
            height: 100px;
            text-align: center;
        }
    </style>
}
<section>
    <div id="box">
        <h2>Choose Actions</h2>
        @using (Html.BeginForm())
        {
            @Html.DropDownList("Action", new[] {new SelectListItem {Text = "Report Hours", Value = "1"}, new SelectListItem {Text = "View Hours", Value = "2"}})
            <input type="submit" value="Submit"/><input type="button" value="Logout" onclick="window.location='/MCI/Logout';"/>
        }
    </div>
</section>
