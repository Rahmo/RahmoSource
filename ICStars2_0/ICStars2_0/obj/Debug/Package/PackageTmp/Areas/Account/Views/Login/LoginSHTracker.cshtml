@using ICStars2_0.Model.Enum
@using ICStars2_0.Mvc
@using ICStars2_0.BusinessLayer
@model ICStars2_0.Model.LoginSHTracker
@using (Ajax.BeginForm("LoginSHTracker", "Login", new AjaxOptions
{
    HttpMethod = "POST",
    OnBegin = "onBegin('tabs-2')",
    OnSuccess = "redirect(data,'tabs-2')"
}))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <table>
                        <tr>
                            <td>
                                <br />
                                Term :
                                <br />
                                @Html.DropDownListFor(m=>m.Terms,Html.BuildQuarterYearSelectListItems(),new {@multiple = "multiple", @style = "height:150px;width:120px;"})
                                    @Html.ValidationMessageFor(m => m.Terms)</td>
                            <td>
                                <br />
                                CampusConnect ID：
                                <label>
                                    @Html.TextBoxFor(m => m.CampusConnectID,new{@style="width:250px;"})
                                    @Html.ValidationMessageFor(m => m.CampusConnectID)
                                </label>
                                <br />
                                <br />
                                Password：
                                <label>
                                    @Html.PasswordFor(m => m.Password,new{@style="width:250px;"})
                                    @Html.ValidationMessageFor(m => m.Password)
                                </label>
                                <br />
                                <br />
                                <input type="submit" value="Login" class="button"/>
                                <span class="red">
                                    @ViewBag.Error
                                </span></td>
                        </tr>
                    </table>

                }