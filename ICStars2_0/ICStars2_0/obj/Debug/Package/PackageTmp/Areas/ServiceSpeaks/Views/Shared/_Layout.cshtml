<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/bundles/css")
    @Styles.Render("~/bundles/layout")
    <style type="text/css">
        body {
            background: url(/images/servicespeaks/header_bg2.jpg) 0 0 repeat-x;
        }
        #title{
            position: absolute;
            left: -30px;
            top: 50px;
            width: 400px;
            height: 249px;
            background: url(/images/servicespeaks/logofont.png) 0 0 no-repeat;
        }
        header, section {
            margin: 0 auto;
            padding: 0px;
            position: relative;
            width: 960px;
        }

        header {
            height: 367px;
        }
            header nav ul {
                position: absolute;
                top: 40px;
                right: 10px;
                background: rgba(255, 255, 255, 0.1);
                width: 580px;
            }

                header nav ul li {
                    float: left;
                    width: 100px;
                    text-align: center;
                    padding: 5px;
                }

                    header nav ul li a:link, header ul li a:visited, header ul li a:hover {
                        color: #fff;
                        font-size: 14px;
                        height: 30px;
                        line-height: 30px;
                        font-weight: bold;
                    }

            header h1 {
                font-size: 24px;
                padding: 5px;
            }

            header div#speakers {
                background: rgba(255, 255, 255, 0.1);
                position: absolute;
                bottom: 30px;
                right: 10px;
                color: #fff;
                margin: 0 auto;
                padding: 0;
                width: 568px;
                padding-left:12px;
                font-weight: bold;
            }

            header div ul li {
                text-align: center;
                float: left;
                font-size: 14px;
                padding: 5px;
            }

                header div ul li img {
                    height: 158px;
                }
        section h1 {
            font-size: 24px;
            font-weight: bold;
            padding: 10px 10px 10px 0;
        }

        section p {
            text-align: center;
            width: 100%;
        }

        section div p {
            text-align: left;
            font-size: 14px;
        }
        .nav_p0 {
            display: block;
            color: #000;
            font-size: 20px;
            padding: 10px;
            width: 288px;
            height: 98px;
            line-height: 50px;
            margin-top: 20px;
            border: dotted 1px #98332B;
        }
        .nav_p0 a.fb {
            background: url(/images/social-icon.jpg) -7px -8px no-repeat;
            width: 32px;
            height:32px;
            display: inline-block;
        }
        .nav_p0 a.tt {
            background: url(/images/social-icon.jpg) -42px -8px no-repeat;
            width: 32px;
            height:32px;
            display: inline-block;
        }
        .nav_p0 a.ytb {
            background: url(/images/social-icon.jpg) -148px -97px no-repeat;
            width: 32px;
            height:32px;
            display: inline-block;
        }
        .nav_p {
            display: block;
            color: #ffffff;
            font-weight: bold;
            font-size: 24px;
            padding: 10px;
            width: 290px;
            height: 30px;
            line-height: 30px;
            margin-top: 20px;
        }
        .grid-c2-w15e9 > .east > .nav_p,.grid-c2-w15e9 > .east > .nav_p0 {
            float: right;
        }
        .nav_p a:link,.nav_p a:visited,.nav_p a:hover {
            color: #ffffff;
            font-weight: bold;
            font-size: 24px;
        }

        .bg_green {
            background-color: #98332B;
        }
        .bg_F19C1D{ background-color: #98332B;}
        .bg_2C8895 {
            background-color: #98332B;
        }
        .bg_DE532C {
            background-color: #98332B;
        }
        .bg_399FD0 {
            background-color: #98332B;
        }
        footer {
            background-color: #000000;
            color: #ffffff;
            width: 100%;
            display: block;
            float: left;
            text-align: center;
            height: 100px;
            line-height: 60px;
            margin-top: 20px;
        }
        footer a:link, footer a:visited, footer a:hover {
                        color: #ffffff;
                    }
    </style>
    @RenderSection("Head", required: false)
</head>
<body>
    <header>
        <span id="title">Service Speaks</span>
        <nav>
            <ul>
                <li>@Html.ActionLink("Home", "Index","Home")</li>
                <li>@Html.ActionLink("About", "About","Home")</li>
                <li>@Html.ActionLink("Schedule", "Schedule","Home")</li>
                <li>@Html.ActionLink("FAQ", "FAQ","Home")</li>
            </ul>
        </nav>
        
    </header>
    @RenderBody()
    <footer>©<script>
 var d = new Date();
    document.write(d.getFullYear());</script> Steans Center for Community Based Service Learning. All Rights Reserved&nbsp;&nbsp;&nbsp;&nbsp; @Html.ActionLink("Home","Index","Home") | @Html.ActionLink("About","About","Home") | @Html.ActionLink("Schedule","Schedule","Home") | @Html.ActionLink("FAQ","FAQ","Home") | <a href="http://www.steans.depaul.edu/contactus.asp">Contact US</a></footer>
</body>
</html>
