@model ICStars2_0.Areas.SHTracker.Controllers.StudentController.ModelForDownload
@{
    ViewBag.Title = "Upload";
    Layout = "~/Areas/SHTracker/Views/Shared/_Layout.cshtml";
}
@section Head
{
    <style type="text/css">
        td{text-align:left;}
        em {
            color: red;
        }
    </style>
@Scripts.Render("~/bundles/jquery", "~/bundles/jqueryval")
    
}
<h2>Upload</h2>
@using (Html.BeginForm("PreviewUploading", "Student", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    <fieldset>
        <legend>Upload Students</legend>
    
        <input type="file" id="Students" name="Students" /><em>@ViewBag.Error</em><br />
        CBO:<br />
        @Html.DropDownListFor(m => m.CBO, (IEnumerable<SelectListItem>) ViewBag.CBONameIDList)
        @Html.ValidationMessageFor(m => m.CBO)<br />
        Required Serve Hours:<br />
        @Html.DropDownListFor(m => m.RequiredServeHours, (IEnumerable<SelectListItem>) ViewBag.HoursList)
        @Html.ValidationMessageFor(m => m.RequiredServeHours)
        <br/>
        Course:<br />
        @Html.DropDownListFor(m => m.Course, (IEnumerable<SelectListItem>) ViewBag.CourseSelectListItems)
        @Html.ValidationMessageFor(m => m.Course)<br />
        @*# of Students:<br />
        @Html.DropDownListFor(m => m.StudentNumber, (IEnumerable<SelectListItem>)ViewBag.StudentNumberList)
        @Html.ValidationMessageFor(m => m.StudentNumber)<br />*@
        Is Project:
        @Html.EditorFor(m => m.IsProject)
        @Html.ValidationMessageFor(m => m.IsProject)
        <br />
        <input type="submit" value="Preview" />
    
        <p>
            This process would take several minutes and might affect SHTracker's performance. You'd better not submit frequently.
        </p>
        <p>Your excel file version must be or newer than 2007 and the file extension name should be ".xlsx"</p>
        <p>Below is a sample of the student sheet. <b>Please ensure that the sheet has a title row (the first row in the picture). Any difference of column name would cause a failure of uploading data related to that column.</b></p>
        <p>
            <img src="/Images/StudentSheet.png" />
        </p>
    </fieldset>
}


