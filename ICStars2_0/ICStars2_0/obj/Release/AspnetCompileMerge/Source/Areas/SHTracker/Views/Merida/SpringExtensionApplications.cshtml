@model IEnumerable<ICStars2_0.Model.MeridaExtensionApplication>

@{
    ViewBag.Title = "Merida Spring Quarter Extension Applications";
    Layout = "~/Areas/SHTracker/Views/Shared/_Layout.cshtml";
}

<h2>Merida Spring Quarter Extension Applications</h2>


<table width="100%">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CampusConnectID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Major)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YearOfApplication)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CampusConnectID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Major)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YearOfApplication)
        </td>
        <td>
            @Html.ActionLink("Details", "SpringExtensionApplicationDetails", new { id = item.ID })
        </td>
    </tr>
}

</table>
