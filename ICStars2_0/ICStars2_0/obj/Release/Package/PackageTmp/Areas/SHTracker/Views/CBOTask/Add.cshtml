@using ICStars2_0.BusinessLayer
@model ICStars2_0.Model.CBOTask

@{
    ViewBag.Title = "Add CBO Task";
    Layout = "~/Areas/SHTracker/Views/Shared/_Layout.cshtml";
}
@section Head {
    @Styles.Render("~/bundles/Site")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <style type="text/css">
        h2 {
            padding-left: 10px;
        }

        fieldset {
            margin-left: 10px;
        }
    </style>
    <script type="text/javascript">
        $(document).ready(function() {
            $("#CBOID").change(function() {
                $.ajax({
                    url: "/SHTracker/Cbo/GetCboJsonResult/" + $(this).val(),
                    type: "GET",
                    success: function (data) {
                        if (data.Address != null) {
                            $("#ServSiteAddress").val(data.Address);
                        }
                        if (data.ContactFristName != null) {
                            $("#ServFirstName").val(data.ContactFristName);
                        }
                        if (data.ContactLastName != null) {
                            $("#ServLastname").val(data.ContactLastName);
                        }
                        if (data.ContactPhone != null) {
                            $("#ServPhone").val(data.ContactPhone);
                        }
                        if (data.ContactEmail != null) {
                            $("#ServEmail").val(data.ContactEmail);
                        }
                    }
                });
            });
        });
    </script>
    }
