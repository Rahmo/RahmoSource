@using DocumentFormat.OpenXml.Office2013.PowerPoint.Roaming
@model ICStars2_0.Model.MCI_TimeLog

@{
    ViewBag.Title = "Report Hours";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head
{
    @Styles.Render("~/bundles/Site", "~/bundles/mci")
    @Scripts.Render("~/bundles/jquery", "~/bundles/jqueryval", "~/bundles/modernizr")
@Scripts.Render("~/bundles/jqueryui")
@Styles.Render("~/bundles/jqueryuicss")
    <style type="text/css">
        body form {
            padding-left: 10px;
        }
    </style>
    <script type="text/javascript">
        $(document).ready(function() {
            $("input[name$='LogDate']").attr("readonly", "true");
        });
    </script>

}
<section>
    <div class="box">
        <h2>ReportHours</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>MCI_TimeLog</legend>
                @if (Model != null && Model.ID > 0)
                {
                    @Html.HiddenFor(m=>m.ID)
                }
                <div class="editor-label">
                    @Html.LabelFor(model => model.HoursAtSite)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.HoursAtSite)
                    @Html.ValidationMessageFor(model => model.HoursAtSite)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Training_Reflection_Hours)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Training_Reflection_Hours)
                    @Html.ValidationMessageFor(model => model.Training_Reflection_Hours)
                </div>

                <div class="editor-label">
                    Date
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.LogDate)
                    @Html.ValidationMessageFor(model => model.LogDate)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Description)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Description)
                    @Html.ValidationMessageFor(model => model.Description)
                </div>

                <p>
                    <input type="submit" value="Submit" /> @Html.ActionLink("Back", "Index")
                </p>
            </fieldset>
        }


    </div>
</section>