@model ICStars2_0.Model.Inquiring

@{
    ViewBag.Title = "ContactUs";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<style type="text/css">
    .MainSection {
        margin-left: auto;
        margin-right: auto;
        width: 550px !important;
        background-color: #e6e6e6;
        border: solid 1px #ccc;
        border-radius: 10px;
    }

    .ContactBody {
        width: 700px;
        margin-left: auto;
        margin-right: auto;
    }

    #Comment {
        width: 479px;
        height: 84px;
        max-height: 100px;
        font-size: 14px;
        font-family: 'Droid Sans', 'Helvetica Neue', Arial, 'Liberation Sans', FreeSans, sans-serif;
    }

    .editor-label {
        width: 60%;
        height: 30px;
        font-size: 1.5em;
        margin: 1px 5px;
    }

    .text-box {
        width: 60%;
        height: 25px;
        margin: 5px 5px;
        border: solid 1px #ccc;
        border-radius: 10px;
    }



    .LegendText, .editor-label {
        font-size: 18px;
        color: Black;

    }

    .field-validation-error {
        font-weight: Bold;
        color: red;
    }
    /*Below is for the popup message*/ 
    #popup_box {
        display: none; /* Hide the DIV */
        position: fixed;
        _position: absolute; /* hack for internet explorer 6 */
        height: 100px;
        
        width: 300px;
        background: #eef1f4;
        left: 300px;
        top: 300px;
        z-index: 100; /* Layering ( on-top of others), if you have lots of layers: I just maximized, you can change it yourself */
        margin-left: 15px;
        /* additional features, can be omitted */
        border: 2px solid Black;
        padding: 15px;
        font-size: 10px;
        -moz-box-shadow: 0 0 5px #000000;
        -webkit-box-shadow: 0 0 5px #000000;
        box-shadow: 0 0 5px #808080;
    }

    #container {
        background: #eef1f4; /*Sample*/
        width: 100%;
        height: 100%;
    }

    a {
        cursor: pointer;
        text-decoration: none;
    }

    /* This is for the positioning of the Close Link */
    #popupBoxClose {
        font-size: 20px;
        line-height: 15px;
        right: 5px;
        top: 2px;
        position: absolute;
        color: white;
        border: red 1px solid;
        background-color: #808080;
        padding: 1px;
        font-weight: 500;
    }
    .Popup {
        margin-top:10px

    }
</style>
@using (Ajax.BeginForm("ContactUs", "MvProject",

    new AjaxOptions { UpdateTargetId = "divInterestDeatils" }))
{


    <div id="popup_box">
        <!-- OUR PopupBox DIV-->
        @if (TempData["message"] == "Message sent")
        {
            <h1 class="Popup">Thank you.  Your information has been submitted. </h1>
            <a id="popupBoxClose">Close</a>
    <script type="text/javascript">

    $(document).ready(function () {

        // When site loaded, load the Popupbox First
        loadPopupBox();

        $('#popupBoxClose').click(function () {
            unloadPopupBox();
        });

        $('#container').click(function () {
            unloadPopupBox();
        });

        function unloadPopupBox() {    // TO Unload the Popupbox
            $('#popup_box').fadeOut("fast");
            $("#container").css({ // this is just for style
                "opacity": "1"
            });
        }

        function loadPopupBox() {    // To Load the Popupbox
            $('#popup_box').fadeIn("slow");
            $("#container").css({ // this is just for style
                "opacity": "0.3"
            });
        }
    });
    </script>
        }

    </div>

