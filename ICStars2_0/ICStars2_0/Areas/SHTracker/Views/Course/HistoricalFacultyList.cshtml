@model IEnumerable<ICStars2_0.Model.HistoricalFaculty>

@{
    ViewBag.Title = "HistoricalFacultyList";
    Layout = "~/Areas/SHTracker/Views/Shared/_Layout.cshtml";
}

<h2>HistoricalFacultyList</h2>
<div class="toolbar">
    @Html.ActionLink("Create", "AddHistoricalFaculty")
</div>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmpId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmpId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditHistoricalFaculty", new { id=item.ID }) |
            @Html.ActionLink("Delete", "DeleteHistoricalFaculty", new { id=item.ID },new{onclick="if(confirm('Are you sure you want to delete ["+item.FirstName+"]')){return true;}return false;"})
        </td>
    </tr>
}

</table>
