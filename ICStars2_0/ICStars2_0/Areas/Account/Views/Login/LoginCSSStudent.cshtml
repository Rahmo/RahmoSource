@using ICStars2_0.Model.Enum
@using ICStars2_0.Mvc
@model ICStars2_0.Model.LoginStudent

@using (Ajax.BeginForm("LoginStudent", "Login", new AjaxOptions 
{ 
    HttpMethod = "POST",
    OnBegin = "onBegin('tabs-4')",
    OnSuccess = "redirect(data,'tabs-4')"
}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <table style="margin-left:50px;">
        <tr>
            <td>
                <br />
                CampusConnect ID：
                                <label>
                                    @Html.EditorFor(m => m.CampusConnectID)
                                    @Html.ValidationMessageFor(m => m.CampusConnectID)
                                </label>
                <br />
                <br />
                Password：
                                <label>
                                    @Html.EditorFor(m => m.Password)
                                    @Html.ValidationMessageFor(m => m.Password)
                                </label>
                <br />
                <br />
                <input type="submit" value="Login" class="button" />

                <span class="red">
                    @ViewBag.Error
                </span></td>
        </tr>
    </table>

}