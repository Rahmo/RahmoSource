@model ICStars2_0.Model.LoginSteansCenter
@using (Ajax.BeginForm("LoginSteansCenter", "Login", new AjaxOptions
{
    HttpMethod = "POST",
    OnBegin = "onBegin('tabs-1')",
    OnSuccess = "redirect(data,'tabs-1')"
}))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <table style="margin-left:50px;">
                        <tr><td>
                                <br />
                                CampusConnect ID：
                                <label>
                                    @Html.EditorFor(m => m.CampusConnectID)
                                    @Html.ValidationMessageFor(m => m.CampusConnectID)
                                </label>
                                <br />
                                <br />
                                Password：
                                <label>
                                    @Html.EditorFor(m => m.Password)
                                    @Html.ValidationMessageFor(m => m.Password)
                                </label>
                                <br />
                                <br />
                                <input type="submit" value="Login" class="button"/>
                                <input name="IsStudent" type="hidden" value="false" />
                                <input name="ReturnUrl" type="hidden" value="@Request.QueryString["ReturnUrl"]"/>
                                <span class="red">
                                    @ViewBag.Error
                                </span></td>
                        </tr>
                    </table>

                }