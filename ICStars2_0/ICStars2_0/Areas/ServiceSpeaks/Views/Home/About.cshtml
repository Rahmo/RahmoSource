@{
    ViewBag.Title = "About Service Speaks -- Steans Center";
    Layout = "~/Areas/ServiceSpeaks/Views/Shared/_Layout.cshtml";
}
@section Head
{
    <style type="text/css">
        section{ height: 1100px;padding-top: 20px;}
        span.imgspan{ float: left;margin: 4px;height: 300px;}
        .grid-c2-w15e9 .west a:link,.grid-c2-w15e9 .west a:visited,.grid-c2-w15e9 .west a:hover{ color: blue;text-decoration: underline;}
        h1,p{ width: 100%;display: block;}
    </style>
}
<section>
    <div class="grid-c2-w15e9">
        <div class="west">
            <h1>CONNECTING COMMUNITY AND CLASSROOM</h1>
            <span class="imgspan"><img src="/Images/ServiceSpeaks/about1.jpg" height="200" /><br /><em>Tony Nelson, Mexico Solidarity Network</em></span>
            <p style="height:300px;">The Service Speaks Conference highlights the work of students, faculty and community partners who are greatly impacted by their community service-learning and social justice experiences. The day-long conference features panels, presentations, workshops and posters that reflect the impact of service on critical social justice issues such as racism, homelessness and living wages, etc. in locally and internationally. We invite you all to join us at the Service Speaks Conference this year!  
            </p>
            <h1>Who Attends Service Speaks</h1>
            <p>Service Speaks attracts students, faculty, and community partners from Chicago, Nationally and Internationally who come to discuss, learn and network with one another. All attendees are eager to share their experiences in service learning and community engagement.  Interested in attending? <br />
                Register to attend here:  <a href="http://www.servicespeaks2014.eventbrite.com" target="_blank">www.servicespeaks2014.eventbrite.com</a> </p>
            <p style="height:200px;"><img src="/Images/ServiceSpeaks/about2.png"/></p>
        </div>
        <div class="east">
            @Html.Partial("RightNav")
        </div>
    </div>

</section>


