@model Commengdpu.BusinessLayer.Authentication.LoginEventArgs

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head{
    @Styles.Render("~/bundles/Site")
    @Scripts.Render("~/bundles/jqueryval")
    <style type="text/css">
        form fieldset {
            margin: 0 auto;
            padding-top: 100px;
        }
    </style>
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>LoginEventArgs</legend>
        
        <div class="editor-label">
            
        </div>
        <div class="editor-field">
            <h1>Login</h1>
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.CampusConnectID)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CampusConnectID)
            @Html.ValidationMessageFor(model => model.CampusConnectID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>

        <p>
            <input type="submit" value="Submit" />
        </p>
    </fieldset>
}
