@model ICStars2_0.Model.MCI_Period

@{
    ViewBag.Title = "Add TimePeriod";
    Layout = "~/Areas/SHTracker/Views/Shared/_Layout.cshtml";
}
@section Head
{
    @Styles.Render("~/bundles/Site")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/bundles/jqueryuicss")
    <script type="text/javascript">
        $(function () {

            $("input[name$='FromDate'],input[name$='ToDate']").attr("readonly", "true").datepicker({
                changeMonth: true,
                changeYear: true
            });
        });

    </script>
}
<h2>Add TimePeriod</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>MCI_Period</legend>
        @if (Model != null && Model.ID > 0)
        {
            @Html.HiddenFor(model => model.ID)
        }

        <div class="editor-label">
            @Html.LabelFor(model => model.FromDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FromDate)
            @Html.ValidationMessageFor(model => model.FromDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ToDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ToDate)
            @Html.ValidationMessageFor(model => model.ToDate)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

