@model IEnumerable<ICStars2_0.Areas.SHTracker.Controllers.SLCGroupReport>

@{
    ViewBag.Title = "SLCGroup";
    Layout = "~/Areas/SHTracker/Views/Shared/_Layout.cshtml";
}

<h2>SLCGroup [@ViewBag.QuarterYear] Total CBOs: [@ViewBag.TotalCBOs]  Total Courses: [@ViewBag.TotalCourses]  Total Students: [@ViewBag.TotalStudents]</h2>

<table width="100%">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SLCName)
        </th>
        <th>@Html.DisplayNameFor(model => model.CampusConnectID)</th>
        <th>
            @Html.DisplayNameFor(model => model.AssignedStudents)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssignedCBOs)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssignedCourses)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServedHours)/@Html.DisplayNameFor(model => model.RequiredHours)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalNotes)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SLCName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CampusConnectID)
            </td>
        <td>
            @Html.DisplayFor(modelItem => item.AssignedStudents)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AssignedCBOs)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AssignedCourses)
        </td>
        <td>
            @(item.ServedHours??0)/@(item.RequiredHours??0)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalNotes)
        </td>
    </tr>
}

</table>
