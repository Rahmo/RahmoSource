@{
    ViewBag.Title = "Calendar  --Steans Center";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{
    @Scripts.Render("~/bundles/jqueryval","~/bundles/jqueryui", "~/bundles/fullcalendar")
    @Styles.Render("~/bundles/fullcalendarcss")
<link href="~/Scripts/JQueryUI2/themes/smoothness/jquery-ui.css" rel="stylesheet" />
    <link href="@Styles.Url("~/Content/Css/Calendar/index.css")" rel="stylesheet" />
    <script type="text/javascript">
        var eventsUrl = "@ViewBag.EventsUrl";
    </script>
@Scripts.Render("~/bundles/calendar")
}
<section>
    @if (User.IsInRole("admin_calendar"))
    {
        <div class="adminbar">
            <span class="fc-button fc-button-prevYear fc-state-default fc-corner-left fc-corner-right @(ViewContext.RouteData.Values["action"].Equals("All")?"active":"")">
                @Html.ActionLink("All Events", "All", "Reservation", null, new { @class = "no_underline" })
            </span>
            <span class="fc-button fc-button-prevYear fc-state-default fc-corner-left fc-corner-right @(ViewContext.RouteData.Values["action"].Equals("Index")?"active":"")">
                @Html.ActionLink("Approved Events", "Index", "Reservation", null, new { @class = "no_underline" })
            </span>
            <span class="fc-button fc-button-prevYear fc-state-default fc-corner-left fc-corner-right @(ViewContext.RouteData.Values["action"].Equals("NeedApprovals") ? "active" : "")">
                @Html.ActionLink("Need Approvals", "NeedApprovals", "Reservation", null, new { @class = "no_underline" })
            </span>
        </div>
    }
    <div class="toolbar">
        <span class="fc-button fc-button-prevYear fc-state-default fc-corner-left fc-corner-right">
            @Html.ActionLink("Make A Reservation", "CreateEvent", "Events", null, new { @class = "no_underline", onclick = "event.preventDefault();return dialog(this.href,'Make A Reservation',600,650);return false;" })
        </span>
        <span class="fc-button fc-button-prevYear fc-state-default fc-corner-left fc-corner-right">
            @Html.ActionLink("Home Calendar", "Index", "Reservation", null, new { @class = "no_underline" })
        </span>
        <span class="fc-button fc-button-prevYear fc-state-default fc-corner-left fc-corner-right @(ViewContext.RouteData.Values["action"].Equals("My")?"active":"")">
            @Html.ActionLink("My Reservations", "My", "Reservation", null, new { @class = "no_underline" })
        </span>
        <span class="fc-button fc-button-prevYear fc-state-default fc-corner-left fc-corner-right">
            @Html.ActionLink("Logout", "Logout", "Calendar", new{Area="Account",ReturnUrl=Request.Url.PathAndQuery}, new { @class = "no_underline" })
        </span>
    </div>
    <div id="calendar"></div>
    <div class="bottom">
        <em>Van: </em><span class="fc-button fc-button-prevYear fc-state-default fc-corner-left fc-corner-right c_van">&nbsp;&nbsp;</span>
        <span class="space"></span>
        <em>Room 101: </em><span class="fc-button fc-button-prevYear fc-state-default fc-corner-left fc-corner-right c_room101">&nbsp;&nbsp;</span>
        <span class="space"></span>
        <em>Room LL 106: </em><span class="fc-button fc-button-prevYear fc-state-default fc-corner-left fc-corner-right c_roomLL106">&nbsp;&nbsp;</span>
    </div>
</section>