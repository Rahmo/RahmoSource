@using ICStars2_0.Model
@model IEnumerable<ICStars2_0.Model.MCI_TimeLog>

@{
    ViewBag.Title = "View Timesheet";
    Layout = "~/Areas/SHTracker/Views/Shared/_Layout.cshtml";
}
@section Head
{@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript">
    var dayNames = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"];
    $(document).ready(function () {
        $("table tr.item").each(function () {
            var d = new Date($(this).find("td:eq(1)").text());
            
            $(this).find("td:eq(0)").html(dayNames[d.getDay()]);
        });
        var hoursAtSite = 0;
        var trainingHours = 0;
        $("table tr.item").each(function () {
            var v = $(this).find("td:eq(2)").text().trim();
            if (v != "") {
                hoursAtSite += parseFloat(v);
            }
            var v2 = $(this).find("td:eq(3)").text().trim();
            if (v2 != "") {
                trainingHours += parseFloat(v2);
            }
        });
        $("table tr.summary td:eq(1)").html(hoursAtSite);
        $("table tr.summary td:eq(2)").html(trainingHours);
        var total = hoursAtSite + trainingHours;
        $("table tr.summary td:eq(3)").html("= " + total + " hours");
        
        $("tr.item:even").addClass("bg_f9f5f6");
        $("tr.item:gt(0)").hover(
            function () {
                $(this).addClass("hover");
            },
            function () {
                $(this).removeClass("hover");
            }
        );
    });
</script>
    <style type="text/css">

        tr.summary {
            font-weight: bold;
            background-image: url(/SHTracker/images/barbg3.jpg);
        }
    </style>
}
<h2>View @ViewBag.StudentName 's Timesheet</h2>
<table width="100%">
    <tr>
        <th>Day</th>
        <th>
            Date
        </th>
        <th>
            Hours At Site
        </th>
        <th>
            Training/Reflection Hours
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>Operation</th>
    </tr>
    @for (DateTime i = ViewBag.FromDate; i <= ViewBag.ToDate; i = i.AddDays(1))
    {
        var item = Model.FirstOrDefault(m => m.LogDate == i);
        <tr class="item">
            <td></td>
            <td>@i.ToString("MM/dd/yyyy")</td>
            <td>
                @(item == null ? "" : item.HoursAtSite.ToString())
            </td>
            <td>
                @(item == null ? "" : item.Training_Reflection_Hours.ToString())
            </td>
            <td title="@(item == null ? "" : item.Description)">
                @(item == null ? "" : item.Description.Truncate(50))
                    </td>
            <td>
                @if (item != null)
                {
                    @(item.IsAuthorized ? Html.ActionLink("Disapprove", "Disapprove", new {id = item.ID, from = Request.QueryString["from"], to = Request.QueryString["to"]}, new {@class = "button"}) : Html.ActionLink("Approve", "Approve", new {id = item.ID, from = Request.QueryString["from"], to = Request.QueryString["to"]}, new {@class = "button"}))
                }
            </td>
        </tr>
    }
    <tr class="summary">
        <td colspan="2"><b>Totals: </b></td>
        <td></td>
        <td></td>
        <td colspan="3"></td>
    </tr>
</table>