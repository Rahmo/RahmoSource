@model ICStars2_0.Model.WebPage


<script type="text/javascript">
    $(function () {
        CKEDITOR.replace('Content', { height: 500 });
        CKEDITOR.replace('Content', { allowedContent: true });
    });

</script>
@{
    ViewBag.Title = "Edit Url";
    Layout = "~/Areas/SHTracker/Views/Shared/_Layout.cshtml";
}
@section Head {
    @Styles.Render("~/bundles/Site")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <style type="text/css">
        em,a{color:red;font-weight:bold;}
    </style>
}
<h2>Edit Url</h2>
<div>
    <p>
        <em>Notice:</em><br/>
        The <b>URL</b> should <b>NOT</b> be changed <b>ONLY</b> when it is newly created and you have to re-correct it.<br/>
        The <b>CHANGE</b> of url is <b>NOT FRIENDLY</b> to the Search Engine(e.g. Google, Bing, etc.).<br/>
        The <b>CHANGE</b> of url will cause a reduced ranking rates of the page and our web site.<br/><br/>
        If you do need change an url that is not newly created, please contact the developer or IIS manager to redirect the <b>OLD URL</b> to the <b>NEW URL</b> <em>PERMANENTLY(301 Redirect)</em>.<br/>
        <em>OR</em><br/>
        We <b>RECOMMEND</b> you <b>KEEP</b> the old url with the page and create a new page with the new url.<br />
        In the meantime, Please go to @Html.ActionLink("EDIT", "Edit", new { url = Model.Url },new{@class="underline link_blue"}) the <b>OLD PAGE</b> and set the <b>REDIRECT301URL</b> to the <b>NEW URL</b>.
    </p>
</div>
<br/><br/>
@using (Html.BeginForm("EditUrl","WebPage"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Article</legend>
        @Html.Hidden("OldUrl",Model.Url)
            <div class="editor-label">
                @Html.LabelFor(model => model.Url) (This would be the url of this webpage. Please make a friendly url with letters, numbers, "-" and "_" only!) 
            </div>
            <div class="editor-field">
                @Html.EditorFor(m=>m.Url)
                @Html.ValidationMessageFor(model => model.Url)
            </div>

        <p>
            <input type="submit" value="Submit" />
        </p>
    </fieldset>
}

